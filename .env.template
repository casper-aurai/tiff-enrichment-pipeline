# =============================================================================
# TIFF Enrichment Pipeline - Environment Configuration
# Copy this file to .env and customize the values
# =============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432
PGADMIN_EMAIL=admin@yourcompany.com
PGADMIN_PASSWORD=your_pgadmin_password_here
PGADMIN_PORT=8080

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================
REDIS_PORT=6379
REDIS_UI_PORT=8081

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
API_RATE_LIMIT=10
PROCESSING_BATCH_SIZE=5
MAX_WORKERS=4
WATCH_INTERVAL=30

# =============================================================================
# API KEYS AND EXTERNAL SERVICES
# =============================================================================
# USGS 3DEP Elevation API
USGS_API_KEY=your_usgs_api_key_here

# Open-Meteo Weather API (usually free, no key required)
OPENMETEO_API_KEY=

# ESA WorldCover API (if required)
ESA_API_KEY=your_esa_api_key_here

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
# Slack webhook for error notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email configuration (optional)
SMTP_HOST=smtp.yourcompany.com
SMTP_PORT=587
SMTP_USER=pipeline@yourcompany.com
SMTP_PASSWORD=your_smtp_password_here
ALERT_EMAIL_TO=ops-team@yourcompany.com

# =============================================================================
# MONITORING CONFIGURATION (Optional)
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=your_grafana_password_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT secret for API authentication (if implementing web API)
JWT_SECRET=your_jwt_secret_key_here

# API rate limiting
API_RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
# Maximum file size in MB
MAX_FILE_SIZE_MB=100

# Supported file extensions (comma-separated)
SUPPORTED_EXTENSIONS=.tif,.tiff,.TIF,.TIFF

# Coordinate system for processing
TARGET_CRS=EPSG:4326

# Image processing parameters
GAUSSIAN_FILTER_SIGMA=1.0
HISTOGRAM_EQUALIZATION=true
GENERATE_THUMBNAILS=true
THUMBNAIL_SIZE=256

# =============================================================================
# VALIDATION CONFIGURATION
# =============================================================================
# Minimum required metadata fields
REQUIRE_GPS_COORDINATES=true
REQUIRE_TIMESTAMP=true
REQUIRE_CAMERA_MODEL=false

# Data quality thresholds
MIN_IMAGE_WIDTH=640
MIN_IMAGE_HEIGHT=480
MAX_COORDINATE_PRECISION=6

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Set to true to enable debug mode (more verbose logging, development features)
DEBUG_MODE=false

# Set to true to enable hot reloading for development
HOT_RELOAD=false

# Test data configuration
USE_SAMPLE_DATA=false
SAMPLE_DATA_COUNT=3

# =============================================================================
# BACKUP AND ARCHIVAL
# =============================================================================
# Enable automatic backup of processed files
ENABLE_BACKUP=true
BACKUP_RETENTION_DAYS=30

# Cloud storage configuration (AWS S3, Google Cloud, etc.)
CLOUD_STORAGE_PROVIDER=
CLOUD_STORAGE_BUCKET=
CLOUD_STORAGE_ACCESS_KEY=
CLOUD_STORAGE_SECRET_KEY=
CLOUD_STORAGE_REGION=

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================
# Memory limits
MAX_MEMORY_USAGE_PERCENT=80
MAX_DISK_USAGE_PERCENT=85

# Retry configuration
MAX_RETRY_ATTEMPTS=3
RETRY_BACKOFF_MULTIPLIER=2
RETRY_MAX_WAIT_SECONDS=60

# Cache TTL (Time To Live) in seconds
ELEVATION_CACHE_TTL=86400  # 24 hours
WEATHER_CACHE_TTL=3600     # 1 hour
LANDCOVER_CACHE_TTL=604800 # 7 days